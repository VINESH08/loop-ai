# ==================== EXAMPLE CONFIGURATION ====================
# Copy this file to application.properties and fill in your API keys
# NEVER commit application.properties to Git!

# Application Name
spring.application.name=loop-ai-backend

# Server Port
server.port=8080

# ==================== Google OAuth2 Configuration ====================
# Get from: https://console.cloud.google.com/apis/credentials
spring.security.oauth2.client.registration.google.client-id=YOUR_GOOGLE_CLIENT_ID
spring.security.oauth2.client.registration.google.client-secret=YOUR_GOOGLE_CLIENT_SECRET
spring.security.oauth2.client.registration.google.scope=openid,profile,email
spring.security.oauth2.client.registration.google.redirect-uri=http://localhost:8080/login/oauth2/code/google

# ==================== AI/Voice API Keys ====================
# Deepgram API Key (Speech-to-Text) - Get from: https://console.deepgram.com/
deepgram.api.key=YOUR_DEEPGRAM_API_KEY

# OpenAI API Key (for TTS) - Get from: https://platform.openai.com/api-keys
openai.api.key=YOUR_OPENAI_API_KEY

# ==================== Groq LLM Configuration (FAST!) ====================
# Get your FREE API key from: https://console.groq.com/
groq.api.key=YOUR_GROQ_API_KEY
# Model options: llama-3.3-70b-versatile (best), llama-3.1-8b-instant (fastest)
groq.model.name=llama-3.3-70b-versatile
groq.temperature=0.1
groq.max-tokens=150

# ==================== OpenAI Configuration (for TTS only) ====================
langchain4j.open-ai.chat-model.api-key=YOUR_OPENAI_API_KEY
langchain4j.open-ai.chat-model.model-name=gpt-4o-mini
langchain4j.open-ai.chat-model.temperature=0.1
langchain4j.open-ai.chat-model.max-tokens=150

# ==================== Session Configuration ====================
server.servlet.session.cookie.same-site=lax
server.servlet.session.cookie.secure=false

# ==================== File Upload Configuration ====================
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# ==================== CSV Configuration ====================
csv.mapping.file-path=classpath:data/hospitals.csv
csv.mapping.name-column=HOSPITAL NAME
csv.mapping.city-column=CITY
csv.mapping.address-column=Address

# ==================== ElevenLabs TTS Configuration (FAST!) ====================
# Get your API key from: https://elevenlabs.io/
# Uses Turbo v2.5 model for ~50% faster TTS than OpenAI
elevenlabs.api.key=YOUR_ELEVENLABS_API_KEY
# Voice IDs: Rachel=21m00Tcm4TlvDq8ikWAM, Adam=pNInz6obpgDQGcFmaJgB
elevenlabs.voice.id=21m00Tcm4TlvDq8ikWAM

# ==================== OpenAI TTS Configuration (Fallback) ====================
# Used only if ElevenLabs is not configured
tts.voice=alloy
tts.intro.message=Hi, this is Loop AI. How can I assist you today?

# ==================== Twilio Configuration (Optional) ====================
# Get from: https://console.twilio.com/
twilio.account.sid=YOUR_TWILIO_ACCOUNT_SID
twilio.auth.token=YOUR_TWILIO_AUTH_TOKEN
twilio.phone.number=+1XXXXXXXXXX
twilio.human.agent.number=+91XXXXXXXXXX
twilio.enabled=false

# ==================== Logging ====================
logging.level.com.loopai=DEBUG
logging.level.dev.langchain4j=DEBUG

